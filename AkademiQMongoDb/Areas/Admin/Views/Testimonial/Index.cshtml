@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Referans Bilgileri Sayfası</h1>

<table class="table table-hover">
    <tr>
		<th>#</th>
		<th>Resim Linki</th>
        <th>İsim Soyisim</th>
        <th>Başlık</th>
        <th>Yorum</th>
        <th>Yıldız</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;

        <tr>
			<th>@count</th>
			<td><img src="@item.ImageUrl" style="width:75px;height:75px" /></td>
            <td>@item.FullName</td>
            <td>@item.Title</td>
            <td>@item.Comment</td>
            <td>@item.Rate</td>
            <td>
                <a href="/Admin/Testimonial/DeleteTestimonial/@item.Id" onclick="return confirm('Bu öğeyi silmek istediğinize emin misiniz?')" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/Testimonial/UpdateTestimonial/@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Admin/Testimonial/CreateTestimonial" class="btn btn-outline-dark">Yeni Referans Oluştur</a>


