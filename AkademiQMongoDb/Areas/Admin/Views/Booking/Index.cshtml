@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Rezervasyon Sayfası</h1>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Telefon Numarası</th>
        <th>Kişi Sayısı</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>İşlemler</th>
    </tr>   

    @foreach (var item in Model)
    {
        count++;

        <tr>
            <th>@count</th>
            <td>@item.Phone</td>
            <td>@item.PersonCount</td>
            <td>@item.Date</td>
            <td>@item.Time</td>
            <td>
                <a href="/Admin/Booking/DeleteBooking/@item.Id" onclick="return confirm('Bu öğeyi silmek istediğinize emin misiniz?')" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/Booking/UpdateBooking/@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Admin/Booking/CreateBooking" class="btn btn-outline-dark">Yeni Rezervasyon Oluştur</a>

