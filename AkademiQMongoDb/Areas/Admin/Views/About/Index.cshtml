@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Hakkımda</h1>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Başlangıç Yılı</th>
        <th>Resim Linki</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Telefon Numarası</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;

        <tr>
            <th>@count</th>
            <td>@item.StartYear</td>
            <td><img src="@item.ImageUrl" style="width:75px;height:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Number</td>
            <td>
                <a href="/Admin/About/DeleteAbout/@item.Id" onclick="return confirm('Bu öğeyi silmek istediğinize emin misiniz?')" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/About/UpdateAbout/@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Admin/About/CreateAbout" class="btn btn-outline-dark">Yeni Hakkımda Oluştur</a>

