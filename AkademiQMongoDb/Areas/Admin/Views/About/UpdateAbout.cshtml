@model UpdateAboutDto
@{
	ViewData["Title"] = "UpdateAbout";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Hakkımda Güncelle</h1>
<br />
<br />

<form method="post">
	<input type="hidden" asp-for="Id" />
	<label>Başlangıç Yılı</label>
	<input type="text" asp-for="StartYear" class="form-control" required />
	<br>
	<label>Resim Linki</label>
	<input type="text" asp-for="ImageUrl" class="form-control" required />
	<br>
	<label>Başlık</label>
	<input type="text" asp-for="Title" class="form-control" required />
	<br>
	<label>Açıklama</label>
	<textarea name="Description" rows="4" class="form-control"></textarea>
	<br>
	<label>Telefon Numarası</label>
	<input type="text" asp-for="Number" class="form-control" required />
	<br>
	<button class="btn btn-dark">Kaydet</button>
</form>