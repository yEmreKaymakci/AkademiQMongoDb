@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Banner Sayfası</h1>

<table class="table table-hover">
    <tr>
		<th>#</th>
		<th>Resim Linki</th>
        <th>Başlık</th>
        <th>Açıklama</th>
		<th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;

        <tr>
			<th>@count</th>
			<td><img src="@item.ImageUrl" style="width:75px;height:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <a href="/Admin/Banner/DeleteBanner/@item.Id" onclick="return confirm('Bu öğeyi silmek istediğinize emin misiniz?')" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/Banner/UpdateBanner/@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Admin/Banner/CreateBanner" class="btn btn-outline-dark">Yeni Banner Oluştur</a>

