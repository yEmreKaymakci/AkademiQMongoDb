@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>İletişim Sayfası</h1>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Açık Adres</th>
        <th>Telefon Numarası </th>
        <th>E-posta Adresi</th>
        <th>Harita Linki</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;

        <tr>
            <th>@count</th>
            <td>@item.Address</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Email</td>
            <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                @item.MapUrl
            </td>
            <td>
                <a href="/Admin/Contact/DeleteContact/@item.Id" onclick="return confirm('Bu öğeyi silmek istediğinize emin misiniz?')" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/Contact/UpdateContact/@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Admin/Contact/CreateContact" class="btn btn-outline-dark">Yeni İletişim Ekle</a>

