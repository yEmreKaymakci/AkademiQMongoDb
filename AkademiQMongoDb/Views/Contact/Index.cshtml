@model ResultContactDto
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayout/Layout.cshtml";
}

<div class="breadcrumb-area bg-cover text-center text-light" style="background-image: url(/source/assets/img/shape/11.jpg);">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12">
				<h1>İletişim</h1>
				<ul class="breadcrumb">
					<li><a href="/Default/Index/"><i class="fas fa-home"></i>Ana Sayfa</a></li>
					<li>İletişim</li>
				</ul>
			</div>
		</div>
	</div>
</div>
<div class="maps-area overflow-hidden">
	<div class="google-maps">
		@Html.Raw(Model.MapUrl)
	</div>
	<div class="contact-style-one-items">
		<div class="container">
			<div class="contact-style-one-box">
				<div class="row">
					<div class="col-lg-6">
						<div class="contact-style-one-info">
							<h2>Restoranımızı Bul</h2>
							<p>
								Restoranımızla ilgili iletişim bilgilerini buradan bulabilirsiniz.
							</p>
							<ul>
								<li class="wow fadeInUp">
									<div class="icon">
										<i class="fas fa-phone-alt"></i>
									</div>
									<div class="content">
										<h5 class="title">Telefon</h5>
										<a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
									</div>
								</li>
								<li class="wow fadeInUp" data-wow-delay="100ms">
									<div class="icon">
										<i class="fas fa-map-marker-alt"></i>
									</div>
									<div class="info">
										<h5 class="title">Konum</h5>
										<p>
											@Model.Address
										</p>
									</div>
								</li>
								<li class="wow fadeInUp" data-wow-delay="200ms">
									<div class="icon">
										<i class="fas fa-envelope-open-text"></i>
									</div>
									<div class="info">
										<h5 class="title">Resmi E-posta Adresimiz</h5>
										<a href="mailto:@Model.Email">@Model.Email</a>
									</div>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="contact-style-one-area default-padding overflow-hidden">

	<div class="container">
		<div class="row align-center">
			<div class="col-lg-12">
				<div class="contact-form-style-one">
					<div class="heading text-center">
						<h5 class="sub-title">İletişimde Kalalım</h5>
						<h2 class="heading">Bize Mesaj Gönderin</h2>
					</div>

					<form asp-controller="Contact" asp-action="SendMessage" method="post">
						<div class="row">
							<div class="col-lg-12">
								<div class="form-group">
									<input class="form-control" id="name" name="FullName" placeholder="Adınız Soyadınız *" type="text" required>
									<span class="alert-error"></span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-6">
								<div class="form-group">
									<input class="form-control" id="email" name="Email" placeholder="E-posta Adresiniz*" type="email" required>
									<span class="alert-error"></span>
								</div>
							</div>
							<div class="col-lg-6">
								<div class="form-group">
									<input class="form-control" id="phone" name="Phone" placeholder="Telefon Numaranız" type="text">
									<span class="alert-error"></span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12">
								<div class="form-group comments">
									<textarea class="form-control" id="comments" name="Content" placeholder="Mesajınız *" rows="5" required></textarea>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12">
								<button type="submit" class="btn btn-theme">
									<i class="fa fa-paper-plane"></i> Mesajı Gönder
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>

		</div>
	</div>
</div>
<div id="notification-data"
	 data-error="@TempData["SendMessageError"]"
	 data-success="@TempData["SendMessageSuccess"]"
	 style="display: none;">
</div>