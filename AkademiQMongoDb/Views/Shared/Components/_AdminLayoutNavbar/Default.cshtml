@*
    AdminLayout Navbar
*@

<header class="flex items-center justify-between whitespace-nowrap border-b border-gray-200 dark:border-gray-800 px-10 py-3 bg-white dark:bg-background-dark">
	<div class="flex items-center gap-8">
		<h2 class="text-gray-900 dark:text-white text-lg font-bold leading-tight tracking-[-0.015em]">Yönetim Sistemi</h2>
	</div>

	<div class="flex items-center gap-4">

		<a href="/Admin/SendMessage/Index" class="relative flex h-10 w-10 cursor-pointer items-center justify-center overflow-hidden rounded-lg bg-transparent text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-white/10">
			<span class="material-symbols-outlined">notifications</span>

			@if (ViewBag.UnreadMessageCount != null && ViewBag.UnreadMessageCount > 0)
			{
				<span class="absolute top-1 right-1 flex h-4 w-4 items-center justify-center rounded-full bg-red-500 text-[10px] font-bold text-white">
					@ViewBag.UnreadMessageCount
				</span>
			}
		</a>

		<div class="flex items-center gap-3">
			<div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10" data-alt="Portrait of a smiling user" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuBToh6xtSuH-38SGeKwGed6Z--o28TkkJg1hBiqtDso_r6zhF3Yd4X4veLeNATVy_cHsoj8QKsJ8WR_tGJYgpWZIWVYp6qvNMLJErvmywJAqKjwhafn_JSbIJafm-aQ4FvTaewBq3yjXyB83rlt6JawgelLb4VUDJqLRuCHHr9cMz1dyHY-qCktCouREhSKRjzfKC5vdBLklafGXRCc2xqYGYzsqBjjuZRmwfOAB4T4Zv9zAjXv26n8sfT4qalCxEBRMVcbNZY6tBI");'></div>
			<div class="flex-col hidden sm:flex">
				<p class="text-gray-900 dark:text-white text-sm font-semibold">@ViewBag.fullName</p>
				<p class="text-gray-500 dark:text-gray-400 text-xs">Admin</p>
			</div>
		</div>
	</div>
</header>